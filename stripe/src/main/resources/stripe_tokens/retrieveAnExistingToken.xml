<template name="retrieveAnExistingToken" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Required parameters -->
    <parameter name="tokenId" description="Id of the token of which token is requested to be retrieved"/>
    <sequence>
        <property name="uri.var.tokenId" expression="$func:tokenId"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://api.stripe.com/v1/tokens/{uri.var.tokenId}" />
            </endpoint>
        </call>

    </sequence>
</template>