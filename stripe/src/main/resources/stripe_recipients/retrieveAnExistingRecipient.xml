<template name="retrieveAnExistingRecipient" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Required parameters -->
    <parameter name="recipientId" description="The identifier of the recipient to be retrieved"/>
    <sequence>
        <property name="uri.var.recipientId" expression="$func:recipientId"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/recipients/{uri.var.recipientId}" />
            </endpoint>
        </call>
    </sequence>
</template>