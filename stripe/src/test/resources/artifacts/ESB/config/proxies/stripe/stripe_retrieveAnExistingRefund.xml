<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="stripe_retrieveAnExistingRefund"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="chargeId" expression="json-eval($.chargeId)"/>
            <property name="refundId" expression="json-eval($.refundId)"/>
            <property name="apiKey" expression="json-eval($.apiKey)"/>
            <stripe.init>
                <apiKey>{$ctx:apiKey}</apiKey>
            </stripe.init>
            <stripe.retrieveAnExistingRefund>
                <chargeId>{$ctx:chargeId}</chargeId>
                <refundId>{$ctx:refundId}</refundId>
            </stripe.retrieveAnExistingRefund>
            <respond/>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </target>
    <description/>
</proxy>
