<component name="stripe_invoiceItems" type="synapse/template">
   <subComponents>
      <component name="createANewInvoiceItem">
         <file>createANewInvoiceItem.xml</file>
         <description>Creates a new invoice item on a customer</description>
      </component>
      <component name="retrieveAnInvoiceItem">
         <file>retrieveAnInvoiceItem.xml</file>
         <description>Retrieves the invoice item with the given ID</description>
      </component>
      <component name="updateAnInvoiceItem">
         <file>updateAnInvoiceItem.xml</file>
         <description>Updates the details of an invoice item on an upcoming invoice</description>
      </component>
      <component name="deleteAnInvoiceItem">
         <file>deleteAnInvoiceItem.xml</file>
         <description>Deletes an invoice item from the upcoming invoice</description>
      </component>
      <component name="getAListOfAllInvoiceItems">
         <file>getAListOfAllInvoiceItems.xml</file>
         <description>Returns a list of  invoice items</description>
      </component>
   </subComponents>
</component>



